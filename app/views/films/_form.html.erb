<%= form_for @film, as: :film, url: film_path(@film), method: :patch do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :year %>
<%= f.text_field :year %>

<%= f.label :cast %>
<%= f.text_field :cast %>

<%= f.label :description %>
<%= f.text_field :description %>

<div class="row column">
  <p>Have you watched this movie?</p>
  <% @watched_collection.each do |watched| %>
    <%=f.radio_button(:watched, "#{watched}") %>
    <%= label_tag(:"#{watched}", "#{watched}") %>
  <% end %>
</div>

<%= f.submit "Submit" %>
<% end %>
